{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:generate"]
    },
    "dev": {
      "inputs": [".env*"],
      "env": ["API_PORT", "API_URL", "DATABASE_URL"],
      "dependsOn": ["^dev", "^db:migrate"]
    },
    "test": {
      "inputs": [".env*"],
      "env": ["API_PORT", "API_URL", "DATABASE_URL"],
      "dependsOn": ["^build", "^db:migrate:test"]
    }
  }
}
