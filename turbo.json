{
  "$schema": "https://turborepo.dev/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["API_PORT", "API_URL", "DATABASE_URL"],
      "outputs": ["dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": [".env*"],
      "env": ["API_PORT", "API_URL", "DATABASE_URL"]
    },
    "db:generate": {
      "cache": true,
      "outputs": ["generated/**"]
    },
    "db:migrate": {
      "cache": true,
      "dependsOn": ["db:generate", "db:up:dev"],
      "outputs": ["prisma/migrations"]
    },
    "db:migrate:test": {
      "cache": false,
      "dependsOn": ["db:generate", "db:up:test"]
    },
    "db:down:dev": {
      "cache": false
    },
    "db:down:test": {
      "cache": false
    },
    "db:up:dev": {
      "cache": false
    },
    "db:up:test": {
      "cache": false
    },
    "lint": {},
    "test": {
      "dependsOn": ["transit", "@repo/vitest-config#build"]
    },
    "transit": {
      "dependsOn": ["^transit"]
    }
  }
}
